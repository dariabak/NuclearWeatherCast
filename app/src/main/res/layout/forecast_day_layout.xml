<?xml version="1.0" encoding="utf-8"?>

<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>
        <variable
            name="ForecastDayLayout"
            type="weather.ui.ForecastDayView" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/forecast_day"
        android:layout_width="match_parent"
        android:layout_height="310dp">

        <ImageView
            android:id="@+id/weather_image"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:layout_marginTop="8dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/acid_rain"
            tools:ignore="MissingConstraints" />

        <TextView
            android:id="@+id/maxtemp_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="20dp"
            android:text="6"
            android:textColor="@android:color/holo_orange_light"
            android:textSize="20sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/mintemp_view"
            app:layout_constraintTop_toBottomOf="@+id/celsius"
            tools:ignore="MissingConstraints" />

        <TextView
            android:id="@+id/mintemp_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:text="-1"
            android:textColor="@android:color/holo_orange_light"
            android:textSize="20sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/celsius"
            tools:ignore="MissingConstraints" />

        <TextView
            android:id="@+id/currenttemp_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="2"
            android:textColor="@android:color/holo_orange_light"
            android:textSize="24sp"
            app:layout_constraintEnd_toStartOf="@+id/celsius"
            app:layout_constraintTop_toBottomOf="@+id/weather_image" />

        <TextView
            android:id="@+id/celsius"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginTop="10dp"
            android:text="Â°C"
            android:textColor="@android:color/holo_orange_light"
            android:textSize="24sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/weather_image" />


    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>