<?xml version="1.0" encoding="utf-8"?>

<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>
        <variable
            name="ForecastDayLayout"
            type="weather.ui.ForecastDayView" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/forecast_day"
        android:layout_width="match_parent"
        android:layout_height="310dp">

        <ImageView
            android:id="@+id/weather_image"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:layout_marginTop="8dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/acidRain"
            tools:ignore="MissingConstraints" />

        <TextView
            android:id="@+id/maxtemp_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="6"
            android:textSize="20sp"
            tools:layout_editor_absoluteX="146dp"
            tools:layout_editor_absoluteY="242dp" />

        <TextView
            android:id="@+id/mintemp_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="-1"
            android:textSize="20sp"
            tools:layout_editor_absoluteX="253dp"
            tools:layout_editor_absoluteY="242dp" />

        <TextView
            android:id="@+id/currenttemp_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="2"
            android:textSize="24sp"
            app:layout_constraintEnd_toStartOf="@+id/celsius"
            tools:layout_editor_absoluteY="181dp" />

        <TextView
            android:id="@+id/celsius"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:text="Â°C"
            android:textSize="24sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            tools:layout_editor_absoluteY="181dp" />


    </androidx.constraintlayout.widget.ConstraintLayout>